    properties([
        [
            $class: 'JiraProjectProperty'
        ], 
        [
            $class: 'RebuildSettings', 
            autoRebuild: false, 
            rebuildDisabled: false
        ], 
        parameters(
            [            
                string(
                    defaultValue: '', 
                    description: '', 
                    name: 'First_Number', 
                    trim: false
                ), 
                
                string(
                    defaultValue: '', 
                    description: '', 
                    name: 'Second_Number', 
                    trim: false
                ),

                choice(
                    choices: ['+', '-', '*', '/'], 
                    description: 'Choose an Operator to perform Calculation', 
                    name: 'Operation'
                )
            ]
        )
    ])


node{
    stage('Git Checkout'){
        git 'https://github.com/Yogendrasingh-Rathore/cal.git'
    }
            stage('Build') {
            withMaven(
                    maven: 'mvn3.6'
             )           
                  {
                    sh "echo ${First_Number} + '  ' + ${Second_Number} + '  ' + ${Operation}"
                    sh 'mvn -B -DskipTests clean install package -DFirst_Number=${First_Number} -DSecond_Number=${Second_Number} -DOperation=${Operation}'
                  }
            }
            
            stage('Test') { 
            withMaven(
                    maven: 'mvn3.6'
             )
             {
                sh 'mvn test' 
             }          
            }
            
            stage('Deliver') {   
                withMaven(
                    maven: 'mvn3.6'
                )
                {
                    sh 'chmod 777 ./delivery.sh'
                    sh './delivery.sh'        
                }
            }
    
    }
    
